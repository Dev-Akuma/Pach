QWidget {
    background-color: #121212;
    color: #ffffff;
    font-family: "Segoe UI", sans-serif;
}

QPushButton {
    background-color: #1f1f1f;
    color: #ffffff;
    border: 1px solid #333;
    padding: 5px;
}

QPushButton:hover {
    background-color: #2a2a2a;
}

QLineEdit, QTextEdit {
    background-color: #1f1f1f;
    color: #ffffff;
    border: 1px solid #333;
}
